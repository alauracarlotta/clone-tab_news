#!/bin/sh

MSG_FILE=$1
COMMIT_SOURCE=$2
SHA1=$3

# Obtém o conteúdo real ignorando linhas de comentário e espaços
REAL_MESSAGE=$(grep -v '^\s*#' "$MSG_FILE" | tr -d '[:space:]')

# Caso AMEND → não abre menu
if [ -n "$SHA1" ]; then
  exit 0
fi

# Caso já exista mensagem real → não chama CZ
if [ -n "$REAL_MESSAGE" ]; then
  exit 0
fi

# Caso commit novo normal → executa CZ com TTY
# GIT_EDITOR aponta para um script que copia a mensagem do cz para o arquivo
GIT_EDITOR="cat > $MSG_FILE" < /dev/tty npx cz 2>/dev/null || true

exit 0
