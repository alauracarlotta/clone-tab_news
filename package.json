{
	"name": "clone-tab_news",
	"version": "1.0.0",
	"description": "Estudos do curso.dev by Filipe Deschamps",
	"main": "index.js",
	"scripts": {
		"setup-env": "npm run services:up && npm run services:wait:postgres-database && npm run migrations:up",
		"concurrently": "concurrently -n next,jest --hide next -k -s command-jest \"next dev\" \"jest --runInBand --verbose\"",
		"dev": " npm run setup-env && next dev",
		"test": "npm run services:up && npm run concurrently",
		"posttest": "npm run services:stop",
		"test:watch": "jest --watchAll --runInBand --verbose",
		"build": "next build",
		"vercel-build": "next build",
		"services:up": "docker compose -f infra/compose.yaml up -d",
		"services:stop": "docker compose -f infra/compose.yaml stop",
		"services:down": "docker compose -f infra/compose.yaml down",
		"services:wait:postgres-database": "node infra/scripts/wait-for-postgres.js",
		"migrations:create": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development create add_new_migration",
		"migrations:up": "node-pg-migrate --migrations-dir infra/migrations --envPath .env.development up",
		"lint:prettier:check": "prettier --check .",
		"lint:prettier:fix": "prettier --write .",
		"lint:eslint:check": "eslint .",
		"concurrent-help": "concurrently --help",
		"prepare": "husky",
		"commit": "cz"
	},
	"author": "",
	"license": "MIT",
	"dependencies": {
		"async-retry": "1.3.3",
		"dotenv": "17.2.3",
		"dotenv-expand": "12.0.3",
		"next": "16.1.1",
		"node-pg-migrate": "7.9.1",
		"pg": "8.16.3",
		"react": "19.2.3",
		"react-dom": "19.2.3",
		"swr": "2.3.8"
	},
	"devDependencies": {
		"@commitlint/cli": "20.2.0",
		"@commitlint/config-conventional": "20.2.0",
		"@types/jest": "30.0.0",
		"baseline-browser-mapping": "2.9.11",
		"commitizen": "4.3.1",
		"concurrently": "9.2.1",
		"cz-conventional-changelog": "3.3.0",
		"eslint": "8.57.1",
		"eslint-config-next": "14.2.4",
		"eslint-config-prettier": "10.1.8",
		"eslint-plugin-jest": "29.10.1",
		"husky": "9.1.7",
		"jest": "30.2.0",
		"prettier": "3.7.4"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	}
}
